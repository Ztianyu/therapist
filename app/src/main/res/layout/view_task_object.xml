<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textTaskObjectName"
        style="@style/TextTaskObject"
        android:text="宋建国" />

    <TextView
        android:id="@+id/textTaskObjectSex"
        style="@style/TextTaskObject"
        android:text="男" />

    <TextView
        android:id="@+id/textTaskObjectAge"
        style="@style/TextTaskObject"
        android:text="65岁" />

    <TextView
        android:id="@+id/textTaskObjectPhone"
        style="@style/TextTaskObject"
        android:layout_weight="2"
        android:text="15698743215" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <com.zty.therapist.widget.CircleImageView
            android:id="@+id/imgTaskObjHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="72dp"
            app:border_color="#E9CDA7"
            app:border_width="1dp"/>
    </RelativeLayout>

</LinearLayout>