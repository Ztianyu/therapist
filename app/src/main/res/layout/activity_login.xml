<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MiWhite"
    android:orientation="vertical"
    android:padding="@dimen/homeMargin">


    <EditText
        android:id="@+id/editLoginName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editHeight"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_login_user"
        android:drawablePadding="8dp"
        android:hint="账  号"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray" />

    <EditText
        android:id="@+id/editLoginPassWord"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editHeight"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_login_pw"
        android:drawablePadding="8dp"
        android:hint="密  码"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btnHeight"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@mipmap/ic_btn_login"
        android:text="立即登录"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btnHeight"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@mipmap/ic_btn_register"
        android:text="还没注册账号？立即注册"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textResetPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:text="修改密码"
            android:textColor="@color/colorForgetPw" />

        <TextView
            android:id="@+id/textForgetPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:text="忘记密码？"
            android:textColor="@color/colorForgetPw" />
    </RelativeLayout>

</LinearLayout>