<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请人："
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textApplyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李梅"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="替班人："
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textReplaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赵倩"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间："
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textReplaceTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-03-05 09:00 ~ 2017-03-05 18:00"
            android:textColor="@color/gray"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="替班积分："
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textReplaceIntegral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:textColor="@color/gray"
            android:textSize="14sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/textReplaceState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="审批中"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_btn_agree"
                android:text="同 意"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/btnNoAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@mipmap/ic_btn_no_agree"
                android:text="不同意"
                android:textColor="@color/white" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>