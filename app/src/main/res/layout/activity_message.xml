<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zty.therapist.widget.StripViewNoImg
        android:id="@+id/textStripMessage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isHasBottomLine="false"
        app:isHasTopLine="false"
        app:lineMargin="16"
        app:textName="通知公告"
        app:textNameColor="@color/gray" />

    <com.zty.therapist.widget.StripViewNoImg
        android:id="@+id/textStripMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isHasBottomLine="true"
        app:isHasTopLine="false"
        app:lineMargin="16"
        app:textName="班组通知"
        app:textNameColor="@color/gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDivider" />

</LinearLayout>