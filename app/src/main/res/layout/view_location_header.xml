<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zty.therapist.imlib.chat.widget.BubbleLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:minHeight="72dp"
        android:minWidth="64dp"
        app:angle="24dp"
        app:arrowHeight="10dp"
        app:arrowLocation="bottom"
        app:arrowPosition="12dp"
        app:arrowWidth="24dp"
        android:padding="8dp"
        app:bubbleColor="#33000000">

        <com.zty.therapist.widget.CircleImageView
            android:id="@+id/imgLocationImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            app:border_color="#E9CDA7"
            app:border_width="1dp"/>

    </com.zty.therapist.imlib.chat.widget.BubbleLinearLayout>

</LinearLayout>